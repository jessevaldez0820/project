@model Group25_Final_Project.Models.SearchViewModel

  

@{
    ViewData["Title"] = "DetailedSearch";
}

<h1>Detailed Search</h1>

<h4>Search View Model</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DisplaySearchResults">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MovieTitle" class="control-label"></label>
                <input asp-for="MovieTitle" class="form-control" />
                <span asp-validation-for="MovieTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedGenreID" class="control-label"></label>
                @Html.DropDownListFor(model => model.SelectedGenreID, (SelectList)ViewBag.AllGenres, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="MovieReleaseDate" class="control-label"></label>
                <input asp-for="MovieReleaseDate" class="form-control" />
                <span asp-validation-for="MovieReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserRating" class="control-label"></label>
                <input asp-for="UserRating" class="form-control" />
                <span asp-validation-for="UserRating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AscendingDescending" class="control-label"></label><br />
                <input type="radio" class="radio" asp-for="AscendingDescending" value="@MovieSort.Ascending" />Greater Than<br />
                <input type="radio" class="radio" asp-for="AscendingDescending" value="@MovieSort.Descending" />Less Than<br />
            </div>
            <div class="form-group">
                <label asp-for="MPAA" class="control-label"></label><br />
                <input type="radio" class="radio" asp-for="MPAA" value="@MpaaRating.NoPreference" /> No Preference<br />
                <input type="radio" class="radio" asp-for="MPAA" value="@MpaaRating.G" /> G<br />
                <input type="radio" class="radio" asp-for="MPAA" value="@MpaaRating.PG" /> PG<br />
                <input type="radio" class="radio" asp-for="MPAA" value="@MpaaRating.PG13" /> PG-13<br />
                <input type="radio" class="radio" asp-for="MPAA" value="@MpaaRating.R" /> R<br />
                <input type="radio" class="radio" asp-for="MPAA" value="@MpaaRating.Unrated" /> Unrated<br />

            </div>
            <div class="form-group">
                <label asp-for="MovieActors" class="control-label"></label>
                <input asp-for="MovieActors" class="form-control" />
                <span asp-validation-for="MovieActors" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

