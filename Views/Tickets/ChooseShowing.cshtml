@model IEnumerable<Group25_Final_Project.Models.Showing>

@{
    ViewData["Title"] = "Showings";
}

<h1>Index</h1>


<a asp-action="Index" asp-controller="RoleAdmin">View User Roles</a>
<table class="table">
    
    <thead>

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movie.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TheaterNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeatCount)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Movie.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TheaterNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SeatCount)
                </td>

                <td>
                    <a asp-action="ChooseSeat" asp-route-id="@item.ShowingID">Add Showing</a> |
                </td>
            </tr>
        }
    </tbody>
</table>
