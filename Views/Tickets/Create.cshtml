@model Group25_Final_Project.Models.Ticket

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(model => model.Order.OrderID)
        <div class="form-group">
            <img class="w-100 h-100 h-auto rounded mx-auto d-block" src="/images/seats.png"
                 alt="Seats!"
                 title="Seats!" />
            <br />
            <label class="control-label">Showings:</label>
            @Html.DropDownList("SelectedShowing", (SelectList)ViewBag.AllShowings, new { @class = "form-control" })
        </div>
            <div class="form-group"> 
                <label class="control-label">Select your seat:</label>
                @Html.DropDownList("SelectedSeat", (MultiSelectList)ViewBag.AllSeats, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="PaymentMethod" class="control-label"></label><br />
                <input type="radio" class="radio" asp-for="PaymentMethod" value="@PaymentMethod.Cash" />Pay with Cash<br />
                <input type="radio" class="radio" asp-for="PaymentMethod" value="@PaymentMethod.PopcornPoints" />Pay with Popcorn Points<br />
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="SeniorCitizen" /> @Html.DisplayNameFor(model => model.SeniorCitizen)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
